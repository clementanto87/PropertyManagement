{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/lib/*": [
        "src/lib/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/components/ui/*": [
        "src/components/ui/*"
      ],
      "@/pages/*": [
        "src/pages/*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "noEmit": true
  },
  "include": [
    "src"
  ]
}